extends layout

block content
    .modal.hide.fade#splashpage(tabindex="-1")
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type="button" ,data-dismiss="modal", aria-hidden="true")&times;
                    h4.modal-title= title
                .modal-body
                    p
                        | Welcome to the 
                        =title
                        | . If this is your first time here, please click the "Help" tile for assistance. 
                        br
                        br
                        | Please not that this webapp requires an HTML5 and Javascript compatible browser, and will not run on Internet Explorer.
                        | You can find a more suitable alternative below
                        br
                        br
                        a.btn.btn-primary(type="button", style="padding:0px;margin:10px", href="https://www.google.com/chrome/browser/") 
                            img(src="images/chrome.png",style="width:75px")
                        a.btn.btn-primary(type="button", style="padding:0px;margin:10px", href="https://www.mozilla.org/firefox/") 
                            img(src="images/firefox.png",style="width:75px")
                        a.btn.btn-primary(type="button", style="padding:0px;margin:10px", href="https://www.apple.com/safari/") 
                            img(src="images/safari.png",style="width:75px")
                .modal-footer
                    button.btn.btn-default(type="button" data-dismiss="modal") Continue
    .modal.hide.fade#addstart(tabindex="-1")
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type="button" ,data-dismiss="modal", aria-hidden="true")&times;
                    h4.modal-title Add New Widget
                .modal-body
                    div.fa-stack.fa-lg
                        i.fa.fa-circle.fa-stack-2x
                        i.fa.fa-inverse.fa-stack-1x 1
                    span
                        strong Select the data source
                    br
                    select#datasource(name="datasource")
                    br
                    br
                    div.fa-stack.fa-lg
                        i.fa.fa-circle.fa-stack-2x
                        i.fa.fa-inverse.fa-stack-1x 2
                    span
                        strong Select the data variable
                        br
                    select#datavar(name="datavar")
                .modal-footer
                    button.btn.btn-default(type="button" data-dismiss="modal") Close
                    button.btn.btn-primary#chartpage(type="button") Continue
